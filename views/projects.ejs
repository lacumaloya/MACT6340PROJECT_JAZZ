<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Jasmine M. Aguilar - Project Gallery">
  <meta name="author" content="Jasmine M. Aguilar">
  
  <!-- Preconnect to external resources -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Share+Tech+Mono&display=swap" rel="stylesheet">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/images/menace.ico">
  
  <title>Projects - Jasmine M. Aguilar</title>
  
  <!-- Stylesheets -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-light d-flex flex-column min-vh-100">
  <%- include('header'); %>

  <main class="flex-grow-1">
    <!-- Projects Header -->
    <section class="py-5 fade-in" aria-label="Projects header">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center section-header">
            <h1 class="display-4 mb-4">My Projects</h1>
            <p class="lead">Explore my collection of digital art and NFT creations</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Grid -->
    <section class="py-5 fade-in" aria-label="Projects grid">
      <div class="container">
        <div class="row g-4">
          <% if (projectArray && projectArray.length > 0) { %>
            <% projectArray.forEach((project, index) => { %>
              <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                  <div class="card-body">
                    <div class="position-relative mb-3">
                      <img src="<%= project.image || '/images/placeholder.jpg' %>" 
                           alt="<%= project.name || 'Project Image' %>" 
                           class="img-fluid rounded">
                      <div class="position-absolute top-0 end-0 m-3">
                        <span class="badge bg-primary"><%= project.editions || '1 of 1' %></span>
                      </div>
                    </div>
                    <h3 class="h5 mb-3"><%= project.name || 'Untitled Project' %></h3>
                    <p class="text-muted mb-3"><%= project.description || 'No description available' %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="text-primary fw-bold"><%= project.price || '0.01 ETH' %></span>
                      <a href="/project/<%= index %>" class="btn btn-outline-primary">
                        <i class="fas fa-eye me-2"></i>View
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="col-12 text-center">
              <div class="card shadow-sm">
                <div class="card-body">
                  <h3 class="h4 mb-3">No Projects Available</h3>
                  <p class="text-muted">Check back soon for new projects!</p>
                  <a href="/" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Return Home
                  </a>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </section>
  </main>

  <%- include('footer'); %>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script type="module" src="/js/index.js"></script>
</body>
</html>